{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@nav/*": [
        "./nav/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@screens/*": [
        "./screens/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    },
    "skipDefaultLibCheck": true,
    "strict": true
  }
}